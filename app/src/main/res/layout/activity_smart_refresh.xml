<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ocean="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@id/smartRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ocean:srlDragRate="0.5"
        ocean:srlHeaderHeight="150dp"
        ocean:srlHeaderMaxDragRate="2"
        ocean:srlReboundDuration="1000">

        <com.joker.ocean.selfview.RainbowHeader
            android:id="@id/header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blue_edge"/>

        <android.support.v7.widget.RecyclerView
            android:id="@id/recycleView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <com.joker.ocean.selfview.RainbowAnimView
        android:id="@id/rainbowView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ocean:rainbowHeight="@dimen/rainbow_height"
        ocean:rainbowLeftMargin="@dimen/rainbow_left_margin"
        ocean:rainbowWidth="@dimen/rainbow_width"
        ocean:rainbow="@drawable/rainbow_ic">

    </com.joker.ocean.selfview.RainbowAnimView>
</FrameLayout>